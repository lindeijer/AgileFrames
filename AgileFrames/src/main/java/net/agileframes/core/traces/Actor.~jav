package net.agileframes.core.traces;

import net.agileframes.core.server.Service;
import net.agileframes.core.server.Server;
import net.jini.core.lookup.ServiceID;
import net.agileframes.core.services.Job;
import net.agileframes.core.forces.Manoeuvre;
import net.agileframes.forces.ManoeuvreManager;
import java.rmi.RemoteException;
import java.rmi.Remote;

public interface Actor extends Server {
  public boolean acceptJob(ServiceID basicServerID,Job job) throws NotTrustedException, RemoteException;
  public void run() throws RemoteException;
  public Properties getProperties() throws RemoteException;

  /** Thrown when the method is invoked with a serviceID that is not trusted. */
  public class NotTrustedException extends Exception {
    public NotTrustedException(){}
  }
  public interface Properties {}
}
